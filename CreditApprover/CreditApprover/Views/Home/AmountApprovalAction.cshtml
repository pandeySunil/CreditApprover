@model CreditApprover.ViewModels.ApprovalFormModel
@{
                /**/

                ViewBag.Title = "AmountApprovalAction";
}

<h2>AmountApprovalAction</h2>
<h1>@Model.User.UserName</h1>
@using (Html.BeginForm("AddApprovalRequest", "Home"))
{

    <div class="form-group">
        @Html.LabelFor(model => model.CreditRequest.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CreditRequest.Amount, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CreditRequest.Amount, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CreditRequest.Purpose, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CreditRequest.Purpose, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CreditRequest.Purpose, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="form-group">

        <div class="col-md-10">
            @Html.DropDownListFor(model => model.SelectUserId, new SelectList(Model.UserList, "UserId", "UserName"), new { htmlAttributes = new { @class = "form-control" } })


        </div>
    </div>
    <div class="form-group">

        <div class="col-md-10">
            @Html.HiddenFor(model => model.User.UserId, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Login" class="btn btn-default" />
        </div>
    </div>
}